{
  "compilerOptions": {
    "outDir": "./lib",
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "esnext",
    "allowJs": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
